.filesContainer
  overflow: hidden
  margin-left: 5em
  z-index: 999

  .thumbnail
    float: left
    margin: 1em 1em
    padding: 1em
    max-width: 150px
    position: relative
    overflow: hidden
    text-overflow: ellipsis;

    .delete
      position: absolute
      top: 0
      right: 0
      opacity: 0

  .fileDownload .delete
      font-size: .5em

  .thumbnail:hover .delete
        opacity: 1

  .fileDownload
    padding: 1em
    .glyphicon
      font-size: 2em

.modal .delete
  background-color: rgb(192, 192, 192)

.fileModal
  .modal-dialog
    width: 90%
    img
      width: 100%